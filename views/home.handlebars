<div class="homePageHeading">
    <h1 class="blog-h1 googlefont">~~ The Tech-Blog ~~</h1>
    <ul class="nav justify-content-center">
        <li class="nav-item">
            <a class="nav-link active" href='/home'>Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/dash">Dashboard</a>
        </li>
        <li class="nav-item">
            <p class='nav-link'>User: <span>{{username}}</span></p>
        </li>
        <li class="nav-item ">
            <button id="btn" type="button">Logout</button>
        </li>
    </ul>
</div>

<fieldset>
    <legend>Viewing All Posts</legend>
    {{#each allPosts as |post|}}
    <div class="card">
        <div class="card-body">
            <h2 class="card-title form-control">{{post.name}}</h2>
            <h5 class="card-title form-control">Posted By: {{username}}</h5>
            <p class="card-text form-control">{{post.description}}</p>
            <button class="float-right btn btn-dark">Comment</button>
        </div>
    </div>
    {{/each}}
</fieldset>

<script src="/js/logout.js"></script>