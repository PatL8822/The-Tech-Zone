<div class="homePageHeading">
    <h1 class="blog-h1 googlefont">~~ The Tech-Blog ~~</h1>
    <ul class="nav justify-content-center">
        <li class="nav-item">
            <a class="nav-link active" href='/home'>Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/dash">Dashboard</a>
        </li>
        <li class="nav-item">
            <p class='nav-link'>User: <span>{{username}}</span></p>
        </li>
        <li class="nav-item">
            <button id="btn" type="button">Logout</button>
        </li>
    </ul>
</div>
<fieldset>
    <legend>Edit Post</legend>
    <div class="card">
        <div class="card-body">
            <h2 class="card-title form-control">Title of post:
                <input type="hidden" name="post-id" value="{{postId}}">
                <input id="postTittle" class="form-control" value="{{name}}">
            </h2>
            <h5 id="postBy" class="card-title form-control">Posted By: {{username}}</h5>
            <p class="card-text"><textarea id="postBody" class="form-control" placeholder="Enter your message here."
                    rows="6">{{description}}</textarea></p>
            <button id='editBtn' type="button">Update</button>
        </div>
    </div>
</fieldset>

<script src="/js/logout.js"></script>
<script src="/js/post.js"></script>
<script src="/js/edit.js"></script>